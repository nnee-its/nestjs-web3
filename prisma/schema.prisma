generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OperatorRole {
  SUPER_ADMIN
  ADMIN
  EDITOR
  VIEWER
}

model Operator {
  walletAddress String   @id
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isDeleted     Boolean  @default(false)

  email        String?      @unique
  name         String?
  role         OperatorRole @default(VIEWER)
  refreshToken String?

  @@map("operators")
}

model Pool {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  projectName  String
  idoPrice     Decimal
  totalRaise   Decimal
  tokenName    String
  tokenNetwork String
  idoNetwork   String
  socials      Json
}
